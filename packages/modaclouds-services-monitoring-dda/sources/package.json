{
	"_schema" : "tag:ieat.ro,2014:mosaic:v2:mos-package-builder:descriptors:composite-package",
	"_schema/version" : 1,
	
	"package" : {
		"name" : "@{definitions:package:name}",
		"version" : "@{definitions:package:version}",
		"release" : "@{definitions:package:release}",
		"architecture" : "i686",
		"root" : "/opt/@{package:identifier}"
	},
	
	"dependencies" : {
		"provides" : ["@{definitions:package:name}"],
		"requires" : [
			"mosaic-rt-jre-7-32bit"
		]
	},
	
	"miscellaneous" : {
		"license" : "apache-2.0",
		"url" : "http://www.modaclouds.eu/",
		"summary" : "MODAClouds services: monitoring DDA"
	},
	
	"overlays" : [
		{
			"generator" : "folders",
			"target" : "@{package:root}",
			"folders" : [
				"/",
				"/bin",
				"/lib",
				"/lib/csparql",
				"/lib/scripts"
			]
		},
		{
			"generator" : "symlinks",
			"target" : "@{package:root}/bin",
			"links" : {
				"@{package:name}--run-service" : "../lib/scripts/run.bash"
			}
		},
		{
			"generator" : "file-creator",
			"target" : "@{package:root}/lib/csparql/csparql.jar",
			"resource" : "csparql.jar",
			"executable" : false,
			"expand" : false
		},
		{
			"generator" : "file-creator",
			"target" : "@{package:root}/lib/scripts/run.bash",
			"resource" : "service-run.bash",
			"executable" : true,
			"expand" : true
		},
		{
			"generator" : "renames",
			"target" : "@{package:root}/lib/csparql",
			"renames" : {
				"main.jar" : "csparql.jar"
			}
		}
	],
	
	"resources" : {
		"service-run.bash" : {
			"generator" : "sources",
			"path" : "service-run.bash"
		},
		"csparql.jar" : {
			"generator" : "fetcher",
			"uri" : "@{definitions:resources:modaclouds:url:dependencies}/rsp-services-csparql-@{definitions:versions:modaclouds:csparql}.jar"
		}
	},
	
	"definitions" : {
		
		"package:name" : "modaclouds-services-monitoring-dda",
		"package:version" : "0.7.0_dev",
		"package:release" : "@{execution:timestamp}",
		
		"versions:modaclouds:csparql" : "0.4.6.1",
		"resources:modaclouds:url:base" : "http://data.volution.ro/ciprian/public/modaclouds",
		"resources:modaclouds:url:dependencies" : "@{definitions:resources:modaclouds:url:base}/dependencies",
		
		"environment:CSPARQL_HOME" : "@{package:root}/lib/csparql",
		"environment:CSPARQL_ENDPOINT_IP" : "0.0.0.0",
		"environment:CSPARQL_ENDPOINT_PORT" : "8083",
		
		"environment:JAVA_HOME" : "/opt/mosaic-rt-jre-7-32bit",
		"environment:PATH" : "@{definitions:environment:JAVA_HOME}/bin:/usr/bin:/bin",
		"environment:TMPDIR" : "/tmp/@{package:identifier}"
	}
}
