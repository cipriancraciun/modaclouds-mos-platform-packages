{
	"_schema" : "tag:ieat.ro,2014:mosaic:v2:mos-package-builder:descriptors:composite-package",
	"_schema/version" : 1,
	
	"package" : {
		"name" : "@{definitions:package:name}",
		"version" : "@{definitions:package:version}",
		"release" : "@{definitions:package:release}",
		"architecture" : "i686",
		"root" : "/opt/@{package:identifier}"
	},
	
	"dependencies" : {
		"provides" : ["@{definitions:package:name}"],
		"requires" : [
			"mosaic-rt-jre-7-32bit"
		]
	},
	
	"miscellaneous" : {
		"license" : "apache-2.0",
		"url" : "http://modaclouds.eu/",
		"summary" : "MODAClouds services: monitoring DDA"
	},
	
	"overlays" : [
		{
			"generator" : "folders",
			"target" : "@{package:root}",
			"folders" : [
				"/",
				"/etc",
				"/bin",
				"/lib",
				"/etc/csparql",
				"/lib/csparql",
				"/lib/scripts"
			]
		},
		{
			"generator" : "unarchiver",
			"target" : "@{package:root}/lib/csparql",
			"resource" : "csparql-distribution.tar.gz",
			"format" : "tar+gzip",
			"options" : {
				"strip-components" : 1
			}
		},
		{
			"generator" : "file-creator",
			"target" : "@{package:root}/lib/scripts/run.bash",
			"resource" : "service-run.bash",
			"executable" : true,
			"expand" : true
		},
		{
			"generator" : "file-creator",
			"target" : "@{package:root}/etc/csparql/setup.properties-template",
			"resource" : "csparql-setup.properties",
			"expand" : true
		},
		{
			"generator" : "file-creator",
			"target" : "@{package:root}/etc/csparql/logback.xml",
			"resource" : "csparql-logback.xml",
			"expand" : true
		},
		{
			"generator" : "renames",
			"target" : "@{package:root}/lib/csparql",
			"renames" : {
				"main.jar" : "./rsp-services-csparql-@{definitions:versions:modaclouds:csparql}.jar"
			}
		},
		{
			"generator" : "symlinks",
			"target" : "@{package:root}/lib/csparql",
			"links" : {
				"setup.properties" : "../../etc/csparql/setup.properties",
				"logback.xml" : "../../etc/csparql/logback.xml"
			}
		},
		{
			"generator" : "symlinks",
			"target" : "@{package:root}/bin",
			"links" : {
				"@{package:name}--run-service" : "../lib/scripts/run.bash"
			}
		}
	],
	
	"resources" : {
		"service-run.bash" : {
			"generator" : "sources",
			"path" : "service-run.bash"
		},
		"csparql-setup.properties" : {
			"generator" : "sources",
			"path" : "csparql-setup.properties"
		},
		"csparql-logback.xml" : {
			"generator" : "sources",
			"path" : "csparql-logback.xml"
		},
		"csparql-distribution.tar.gz" : {
			"generator" : "fetcher",
			"uri" : "@{definitions:resources:modaclouds:url:dependencies}/rsp-services-csparql-@{definitions:versions:modaclouds:csparql}-distribution.tar.gz"
		}
	},
	
	"definitions" : {
		"package:name" : "modaclouds-services-monitoring-dda",
		"package:version" : "@{definitions:distribution:version}.@{definitions:distribution:release}_@{definitions:distribution:label}",
		"package:release" : "@{execution:timestamp}",
		"distribution:version" : "0.7.0",
		"distribution:release" : "5",
		"distribution:label" : "modaclouds",
		"distribution:identifier" : "@{definitions:distribution:version}.@{definitions:distribution:release}_@{definitions:distribution:label}",
		"resources:modaclouds:url:base" : "http://data.volution.ro/ciprian/public/modaclouds",
		"resources:modaclouds:url:packages" : "@{definitions:resources:modaclouds:url:base}/packages",
		"resources:modaclouds:url:dependencies" : "@{definitions:resources:modaclouds:url:base}/dependencies",
		"resources:modaclouds:url:suffix" : "@{definitions:distribution:identifier}",
		"environment:CSPARQL_HOME" : "@{package:root}/lib/csparql",
		"environment:CSPARQL_CONF" : "@{package:root}/etc/csparql",
		"environment:JAVA_HOME" : "/opt/mosaic-rt-jre-7-32bit",
		"versions:modaclouds:csparql" : "0.4.3"
	}
}
