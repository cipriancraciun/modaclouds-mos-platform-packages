{
	"_schema" : "tag:ieat.ro,2014:mosaic:v2:mos-package-builder:descriptors:composite-package",
	"_schema/version" : 1,
	
	"package" : {
		"name" : "@{definitions:package:name}",
		"version" : "@{definitions:package:version}",
		"release" : "@{definitions:package:release}",
		"architecture" : "i686",
		"root" : "/opt/@{package:identifier}"
	},
	
	"dependencies" : {
		"provides" : ["@{definitions:package:name}"],
		"requires" : [
			"mosaic-rt-jre-7-32bit"
		]
	},
	
	"miscellaneous" : {
		"license" : "apache-2.0",
		"url" : "http://www.modaclouds.eu/",
		"summary" : "MODAClouds services: monitoring SDA Weka"
	},
	
	"overlays" : [
		{
			"generator" : "folders",
			"target" : "@{package:root}",
			"folders" : [
				"/",
				"/etc",
				"/bin",
				"/lib",
				"/etc/sda-weka",
				"/lib/sda-weka",
				"/lib/scripts"
			]
		},
		{
			"generator" : "file-creator",
			"target" : "@{package:root}/lib/scripts/run.bash",
			"resource" : "service-run.bash",
			"executable" : true,
			"expand" : true
		},
		{
			"generator" : "symlinks",
			"target" : "@{package:root}/bin",
			"links" : {
				"@{package:name}--run-service" : "../lib/scripts/run.bash"
			}
		},
		{
			"generator" : "unarchiver",
			"target" : "@{package:root}/lib/sda-weka",
			"resource" : "sda-weka-distribution.tar.gz",
			"format" : "tar+gzip",
			"options" : {
				"strip-components" : 1
			}
		},
		{
			"generator" : "renames",
			"target" : "@{package:root}/lib/sda-weka",
			"renames" : {
				"main.jar" : "./sda-weka-@{definitions:versions:modaclouds:sda-weka}-jar-with-dependencies.jar"
			}
		},
		{
			"generator" : "unlinks",
			"target" : "@{package:root}/lib/sda-weka",
			"unlinks" : [
				"/dda.properties",
				"/kb.properties"
			]
		},
		{
			"generator" : "file-creator",
			"target" : "@{package:root}/etc/sda-weka/dda.properties",
			"resource" : "sda-weka-dda.properties",
			"executable" : false,
			"expand" : true
		},
		{
			"generator" : "file-creator",
			"target" : "@{package:root}/etc/sda-weka/kb.properties",
			"resource" : "sda-weka-kb.properties",
			"executable" : false,
			"expand" : true
		}
	],
	
	"resources" : {
		"service-run.bash" : {
			"generator" : "sources",
			"path" : "service-run.bash"
		},
		"sda-weka-distribution.tar.gz" : {
			"generator" : "fetcher",
			"uri" : "@{definitions:resources:modaclouds:url:dependencies}/distribution.tar.gz"
		},
		"sda-weka-dda.properties" : {
			"generator" : "sources",
			"path" : "sda-weka-dda.properties"
		},
		"sda-weka-kb.properties" : {
			"generator" : "sources",
			"path" : "sda-weka-kb.properties"
		}
	},
	
	"definitions" : {
		
		"package:name" : "modaclouds-services-monitoring-sda-weka",
		"package:version" : "0.7.0_dev",
		"package:release" : "@{execution:timestamp}",
		
		"versions:modaclouds:sda-weka" : "1.0.2",
		
		"resources:modaclouds:url:base" : "http://data.volution.ro/modaclouds/public",
		"resources:modaclouds:url:dependencies" : "@{definitions:resources:modaclouds:url:base}/dependencies/@{definitions:package:name}/@{definitions:versions:modaclouds:sda-weka}",
		
		"environment:SDA_WEKA_HOME" : "@{package:root}/lib/sda-weka",
		"environment:SDA_WEKA_CONF" : "@{package:root}/etc/sda-weka",
		"environment:SDA_WEKA_ENDPOINT_IP" : "0.0.0.0",
		"environment:SDA_WEKA_ENDPOINT_PORT" : "8085",
		
		"environment:DDA_ENDPOINT_IP" : "0.0.0.0",
		"environment:DDA_ENDPOINT_PORT" : "8083",
		
		"environment:KNOWLEDGEBASE_ENDPOINT_IP" : "0.0.0.0",
		"environment:KNOWLEDGEBASE_ENDPOINT_PORT" : "8081",
		"environment:KNOWLEDGEBASE_DATASET_PATH" : "/modaclouds/kb",
		
		"environment:JAVA_HOME" : "/opt/mosaic-rt-jre-7-32bit",
		"environment:PATH" : "@{definitions:environment:JAVA_HOME}/bin:/usr/bin:/bin",
		"environment:TMPDIR" : "/tmp/@{package:identifier}"
	}
}
